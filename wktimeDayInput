var xmlDoc = new ActiveXObject("Microsoft.XMLDOM");
xmlDoc.async = false;

var root = xmlDoc.createElement("root");

var note = xmlDoc.createElement("note");
var cdata = xmlDoc.createCDATASection("This is <b>bold</b> & needs no escape!");

note.appendChild(cdata);
root.appendChild(note);
xmlDoc.appendChild(root);

alert(xmlDoc.xml);


var xmlDoc = new ActiveXObject("Microsoft.XMLDOM");
xmlDoc.async = false;

var root = xmlDoc.createElement("people");

var person = xmlDoc.createElement("person");
var name = xmlDoc.createElement("name");
name.text = "Alice";

var age = xmlDoc.createElement("age");
age.text = "30";

person.appendChild(name);
person.appendChild(age);
root.appendChild(person);
xmlDoc.appendChild(root);

// ðŸ‘‡ Output the XML string
alert(xmlDoc.xml);
